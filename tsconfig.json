{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/*": ["server/src/*"]
    },
    "resolveJsonModule": true,
    "strict": true,
    "outDir": "built",
    "target": "ESNext",
    "esModuleInterop": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true,
    "strictNullChecks": false,
    "strictPropertyInitialization": false,
    "noEmitOnError": true,
    "sourceMap": true
  },
  "include": ["**/*.ts"],
  "exclude": ["node_modules", "built"]
}
